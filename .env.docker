# Docker部署环境变量配置
# 复制此文件为.env并在部署前修改

# ========== 应用配置 ==========
# 主机端口映射
HOST_PORT=8080

# AI服务配置
AI_API_KEY=your_deepseek_api_key_here
AI_MODEL=deepseek-chat
AI_BASE_URL=https://api.deepseek.com
AI_TIMEOUT=30000
AI_MAX_TOKENS=1000
AI_ENABLED=true

# ========== 数据库配置（可选） ==========
DB_PASSWORD=ai_password
DB_PORT=5432

# ========== Redis配置（可选） ==========
REDIS_PORT=6379

# ========== 监控配置（可选） ==========
GRAFANA_PASSWORD=admin

# ========== 高级配置 ==========
# JVM参数
JAVA_OPTS=-Xmx512m -Xms256m -XX:+UseG1GC

# 时区
TZ=Asia/Shanghai

# 日志级别
LOGGING_LEVEL_ROOT=INFO